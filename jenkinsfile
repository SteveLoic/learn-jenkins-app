pipeline {
    agent any
    stages {
          stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh 'ls -la'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
            }
        }
        stage("Test") {
            agent{
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh 'test -f build/index.html'
                sh 'npm  test'
            }
        }
        stage('E2E') {
            agent{
                docker {
                    image 'mcr.microsoft.com/playwright:v1.51.0-noble'
                    reuseNode true
                }
            }
            steps{
              sh 'npm install -g serve'
              sh 'serve -s build'
              sh 'npx playwright test '
            }
        }
    }
    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
